<!DOCTYPE html>
<html>
<head>
  <title>Uptime</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "detect_timezone.min"%>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>
<% if flash[:error]%>
  <div class="error"><%= flash[:error]%></div>
<% end %>
<% if flash[:notice]%>
  <div class="notice"><%= flash[:error]%></div>
<% end %>

<div id="user_nav">  
  <% if current_user %>
    Hello <%= current_user.name %>.  
  <% else %>
    <%= link_to "Sign in with Twitter", "/auth/twitter" %>  
  <% end %>
</div>
<%= yield %>

</body>
</html>
